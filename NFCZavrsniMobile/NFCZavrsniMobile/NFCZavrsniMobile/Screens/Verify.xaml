<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NFCZavrsniMobile.Screens.Verify"
             Title="NFC time tracking">
    <ContentPage.Content>
        <StackLayout
            VerticalOptions="CenterAndExpand" 
            HorizontalOptions="CenterAndExpand">
            <Label Text="Verify user" FontSize="Large" HorizontalOptions="CenterAndExpand"  Margin="0, 20, 15, 5" FontAttributes="Bold"/>
            <Entry x:Name="verificationCodeInput" Placeholder="code.."/>
            <Button Text="Confirm" HorizontalOptions="Center" Clicked="LoginUser" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>