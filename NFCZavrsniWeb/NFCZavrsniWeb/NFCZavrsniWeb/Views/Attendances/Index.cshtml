@model IEnumerable<NFCZavrsniWeb.Models.Entity.Attendance>

@{
    ViewBag.Title = "Index";
}

<h2>All attendances</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            ID attendance
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee1.OIB)
        </th>
        <th> 
            Name 
        </th>
        <th>
            Tag
        </th>
        <th>
            Time
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee1.OIB)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee1.Person.FirstName) @Html.DisplayFor(modelItem => item.Employee1.Person.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tag1.Client1.Name) /
            @Html.DisplayFor(modelItem => item.Tag1.Location1.Name) / 
            @Html.DisplayFor(modelItem => item.Tag1.TypeOfAttendance1.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateTime)
        </td>
        <!--
        <td>
           Html.DisplayFor(modelItem => item.NFCContentRead)
        </td>
        <td>
            Html.DisplayFor(modelItem => item.NFCContentUploaded)
        </td>
        -->
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
            @Html.ActionLink("Details", "Details", new { id = item.ID })
        </td>
    </tr>
}

</table>
